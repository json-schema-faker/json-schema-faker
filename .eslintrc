{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "svelte3"
  ],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules" : {
    "max-len": ["error", {
      "code": 150
    }],
    "arrow-parens": ["error", "as-needed"],
    "indent": 0,
    "strict": 0,
    "prefer-const": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-multi-assign": 0,
    "prefer-destructuring": 0,
    "function-paren-newline": 0,
    "global-require": 0,
    "prefer-spread": 0,
    "prefer-object-spread": 0,
    "prefer-rest-params": 0,
    "prefer-arrow-callback": 0,
    "arrow-body-style": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "import/first": 0,
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "import/no-dynamic-require": 0,
    "import/no-mutable-exports": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0
  }
}
