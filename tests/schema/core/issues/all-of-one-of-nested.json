[
  {
    "description": "allOf and oneOf nested",
    "schemas": [{
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "date_of_birth": {
          "type": "string",
          "minimum": 10,
          "maximum": 10
        },
        "age_group": {
          "type": "string",
          "minLength": 5,
          "maxLength": 5
        }
      },

      "allOf": [{
        "oneOf": [{
          "required": [
            "age_group"
          ]
        }, {
          "required": [
            "date_of_birth"
          ]
        }]
      }]
    }],
    "tests": [
      {
        "description": "should combine recursively",
        "schema": "schemas.0",
        "valid": true
      }
    ]
  }
]
